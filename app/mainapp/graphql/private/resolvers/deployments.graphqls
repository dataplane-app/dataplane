type Deployments {
  pipelineID: String!
  version: String!
	name: String!
  environmentID: String!
  description: String!
  active: Boolean!
  online: Boolean!
  current: String!
  workerGroup: String!
  created_at: Time!
  updated_at: Time!
  node_type: String!
  node_type_desc: String!
  schedule: String!
  schedule_type: String!
}



# ----- Get flow
type DeploymentNodes {
	nodeID:        String!       
	pipelineID:    String!  
  version:       String!       
	name:          String!         
	environmentID: String!         
	nodeType:      String!   
  nodeTypeDesc:  String!   
  triggerOnline: Boolean!
	description:   String!         
  commands:      Any!
	meta:          Any! 
  workerGroup:   String!
	active:        Boolean!           
}

type DeploymentEdges {
  edgeID:        String!       
	pipelineID:    String!    
  version:       String!     
	from:          String!         
	to:            String!         
	environmentID: String!         
	meta:          Any! 
	active:        Boolean!           
}

type DeploymentFlow {
  edges: [DeploymentEdges!]!
  nodes: [DeploymentNodes!]!
}


